<div class="container col-md-10 bg-light">
    <div class="row bg-light">
        <div class="col-md-6">
                    <img src="{{gundam.image}}" width="300" height="300" alt="{{ gundam.name }} Image">
                </div>
        <div class="col-md-6">
            <h1>{{ gundam.name }}</h1>
            <h4>Brand: {{ gundam.brand }}</h4>
            <h4>Date of Manufactory: {{dateFormat gundam.dom "DD-MM-YYYY"}}</h4>
            <h4>Price: {{ gundam.price }}</h4>
            
            <div>
                <button class="btn btn-primary" id="addToCartButton">Add to Cart</button>
                <button class="btn btn-secondary" id="addToFavoritesButton">Add to Favorites</button>
            </div>
        </div>
        </div>
<br>
        <div class="row ">
            <div class="card bg-light text-dark">
                <h3>Detail</h3>
            <div class="card-body">{{ gundam.detail }}</div>
            </div>
        </div>
</div>
